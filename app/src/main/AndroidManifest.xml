        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Register.instructorRegister.Detailspage"></activity>
        <activity android:name=".activity.MyCourses" />
        <activity android:name=".Register.memberRegister.OTPactivity" />
        <activity android:name=".Connection.NoConnectionPage" />

