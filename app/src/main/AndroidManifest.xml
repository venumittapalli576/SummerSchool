        <activity android:name=".course.offline.SwimmingDetails" />
        <activity android:name=".course.offline.HindiDetails" />
        <activity android:name=".course.offline.DrawingDetails" />
        <activity android:name=".course.offline.MusicDetails" />
        <activity android:name=".course.offline.DanceDetails" />
        <activity android:name=".VideoView" />
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register.memberRegister.LoginActivity" />
        <activity android:name=".PdfView.PDFActivity" />
